<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td>
        <%= f.check_box :all_day, {}, '◯', '' %>
          <br><label>終日の場合はチェックを入れます</label>
      </td>
    </tr>

    <tr>
      <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :schedule_memo %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    </ul>
  </div>
<% end %>

<footer>
  <h1>現在の日時 : <%= @date1 %></h1>
</footer>